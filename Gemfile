# Frontend
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'

# Backend
gem 'devise'

# Utilities
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc

