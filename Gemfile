  gem 'byebug'
  gem 'rspec-rails'
  gem 'factory_girl_rails'
end

group :development do
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

group :test do
  gem 'nyan-cat-formatter'
  gem 'database_cleaner'
  gem 'ffaker'
end
